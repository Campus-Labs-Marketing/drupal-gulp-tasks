{
  "bower": {
    "src": "./bower.json"
  },
  "composer": {
    "src": "./composer.json"
  },
  "phpcs": {
    "src": "**.php"
  },
  "phplint": {
    "src": "**.php"
  },
  "eslint": {
    "src": "**.js"
  },
  "phpunit": {
    "src": "phpunit.xml.dist"
  },
  "behat": {
    "configFile": "behat.yml"
  },
  "backstopjs": {
    "src": "backstop/backstop.js",
    "baseUrl": "http://example.com",
    "artifactGlob": "backstop/reports/**",
    "junitGlob": "backstop/**.xml"
  },
  "phantomas": {
    "src": "phantomas/phantomas.yml",
    "baseUrl": "http://example.com"
  },
  "scss": {
    "theme": {
      "src": "*.scss",
      "dest": "dist/"
    }
  },
  "js": {
    "theme": {
      "src": "*.js",
      "dest": "dist/"
    }
  },
  "copy": {
    "theme": {
      "src": "*.jpg",
      "dest": "dist/"
    }
  }
}


